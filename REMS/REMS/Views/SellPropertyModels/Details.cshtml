@model dynamic

@{
    ViewData["Title"] = "Details";
    var item = Model.property;
}

<h1>Details</h1>

<div>
    <h4>SellPropertyModel</h4>
    <hr />
    <div class="row">
        <dl class="col">
            <div class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @item.name
                </dd>
                <dt class="col-sm-2">
                    Property Type
                </dt>
                <dd class="col-sm-10">
                    @item.propertyType
                </dd>
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-10">
                    @item.address
                </dd>
                <dt class="col-sm-2">
                    Description
                </dt>
                <dd class="col-sm-10">
                    @item.description
                </dd>
                <dt class="col-sm-2">
                    Start Price
                </dt>
                <dd class="col-sm-10">
                    @item.startprice
                </dd>
            </div>
        </dl>
        <div class="col">
            <div class="card">
                <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                    <img src="https://localhost:44324/app-images/@item.image"
                         class="img-fluid" />
                    <a href="#!">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <hr class="w-50" />
    @if (ViewBag.isSold)
    {
        <div class="row">
            <h3>Property Sold To: @ViewBag.winner</h3>
        </div>
    }
    else
    {
        if (ViewBag.hasBids)
        {
            <h2>Bids: </h2>
        }
        else
        {
            <h2>Bids: None</h2>
        }
        @foreach (var bid in Model.bids)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @bid.customername  $ @bid.bid
                </dt>
                <dd class="col-sm-10">
                    @*<a asp-action="Bid" asp-route-id="@ViewBag.id" asp-route-bidId="@bid.id">Accept</a>*@
                    <form asp-action="Bid">
                        <input type="hidden" value="@ViewBag.id" name="id" id="id" />
                        <input type="hidden" value="@bid.id" name="bidId" id="bidId" />
                        <input type="submit" value="Accept" class="btn btn-primary">
                    </form>
                </dd>
            </dl>
        }

    }
    <hr class="w-25" />
    <div class="row">
        @if (ViewBag.show)
        {
            <h2>Comments:</h2>
        }
        @foreach (var comment in Model.comments)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @comment.name
                </dt>
                <dd class="col-sm-10">
                    @comment.comment
                </dd>
            </dl>
        }
    </div>
    <form asp-action="Comments">
        Add Comment
        <div class="form-actions no-color">
            <input type="hidden" value="@ViewBag.id" name="id" id="id" />
            <div class="input-group">
                <div class="form-outline">
                    <input type="text" class="form-control" name="comment" id="comment" required>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@ViewBag.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
