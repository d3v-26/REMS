@model dynamic

@{
    ViewData["Title"] = "Details";
    var item = Model.property;
}

<h1>Details</h1>

<div>
    <h4>SellPropertyModel</h4>
    <hr />
    <div class="row">
        <dl class="col">
            <div class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @item.name
                </dd>
                <dt class="col-sm-2">
                    Property Type
                </dt>
                <dd class="col-sm-10">
                    @item.propertyType
                </dd>
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-10">
                    @item.address
                </dd>
                <dt class="col-sm-2">
                    Description
                </dt>
                <dd class="col-sm-10">
                    @item.description
                </dd>
                <dt class="col-sm-2">
                    Start Price
                </dt>
                <dd class="col-sm-10">
                    @item.startprice
                </dd>
            </div>
        </dl>
        <div class="col">
            <div class="card">
                <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                    <img src="https://localhost:44324/app-images/@item.image"
                         class="img-fluid" />
                    <a href="#!">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
                    </a>
                </div>
            </div>
        </div>
        @if (ViewBag.isApplied)
        {
            var bid = Model.bids;
            if (ViewBag.won)
            {
                <div class="row">
                    <hr class="w-50" />
                    <h4>You Own This Property</h4>
                </div>
            }
            else
            {
                <div class="row">
                    <hr class="w-50" />
                    <h4>You have Applied for this property <a asp-controller="BidModels" asp-action="Details" asp-route-id="@bid.id">Your Bid</a></h4>
                </div>
            }
            
        }
        else
        {
            <div class="row">
                <div class="col">
                    <hr class="w-50" />
                    <form asp-action="Bid">
                        <input type="hidden" value="@ViewBag.id" name="id" id="id">
                        <input type="number" min="@ViewBag.startprice" name="bid" id="bid" required>
                        <input type="submit" value="Place Bid" class="btn btn-primary">
                    </form>
                </div>
            </div>
        }
    </div>
    <hr class="w-50" />
    <div class="row">
        @if (ViewBag.show)
        {
            <h2>Comments:</h2>
        }
        @foreach (var comment in Model.comments)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @comment.name
                </dt>
                <dd class="col-sm-10">
                    @comment.comment
                </dd>
            </dl>
        }
    </div>
    @*<form asp-action="Comment">
            <input type="hidden" value="@ViewBag.id" name="id" id="id" />
            <input type="text" class="form-group" name="comment" id="comment" required>
            <button type="submit" value="Delete" class="btn btn-danger"><i class="fas fa-arrow-right"></i></button>
        </form>*@
    <form asp-action="SComments">
        Add Comment
        <div class="form-actions no-color">
            <input type="hidden" value="@ViewBag.id" name="id" id="id" />
            <div class="input-group">
                <div class="form-outline">
                    <input type="text" class="form-control" name="comment" id="comment">
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
    </form>
</div>